            },
            "ap-southeast-2": {
                "AMI": "ami-c267b0a0"
            },
            "ca-central-1": {
                "AMI": "ami-c59818a1"
            },
            "eu-central-1": {
                "AMI": "ami-43eec3a8"
            },
            "eu-west-1": {
                "AMI": "ami-921423eb"
            },
            "eu-west-2": {
                "AMI": "ami-924aa8f5"
            },
            "eu-west-3": {
